  	remain=n; 
  	for(i=0;i<n;i++) 
  	{ 
  		printf("\nRequest Number %d :",i+1);
    	printf("\nEnter Arrival Time and Burst Time of Request"); 
    	scanf("%d",&at[i]); 
    	scanf("%d",&bt[i]); 
    	rt[i]=bt[i]; 
  	} 
