#include<stdio.h>
#include<stdlib.h>
int handleQueries();
int main() 
{ 
 while(1){
	int detail;
  printf("\nQueries : \n1.Faculty Queries\t2.Student Queries\t3.Exit\n");
  scanf("%d",&detail);
  switch(detail){
  	case 1:
  		printf("\n\t\tFaculty Queries : ");
  		handleQueries();
  		break;
  	case 2:
  		printf("\n\t\tStudent Queries");
  		handleQueries();
  		break;
  	case 3:
  		printf("\nProgram terminated ");
  		exit(0);
		break;
  	default:
  		printf("\nWrong key pressed");
  		break;
  }
}
}
